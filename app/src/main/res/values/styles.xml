<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_textView" parent="Widget.AppCompat.TextView">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/white_cell_bg_with_black_border</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="start_location_btn_clicked" parent="default_textView">
        <item name="android:background">@drawable/start_cell_bg</item>
    </style>

    <style name="destination_btn_clicked" parent="default_textView">
        <item name="android:background">@drawable/destination_cell_bg</item>
    </style>

    <style name="wall_btn_clicked" parent="default_textView">
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/black_cell_bg</item>
    </style>

</resources>
